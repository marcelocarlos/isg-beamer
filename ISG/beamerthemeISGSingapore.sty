% Theme specific settings %
%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{navigation symbols}{} %remove navigation buttons

%%%%%%%%%%%%%%%%%%%%%%%%%
% Redefining Title Page %
%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{title page}{ISG}
{
\usebackgroundtemplate{\includegraphics[width=1.0\paperwidth]{ISG/graphics/general/watermark-logo.png}} % background image to insert the ISG and RHUL logo
	\begin{center}
		\vspace{44pt}
  		\usebeamerfont{title}\textbf{\color{isgmediumblue}{\inserttitle}}\par
  		\usebeamerfont{subtitle}\color{black}\insertsubtitle\par
  		\vspace{16pt}
  		\usebeamerfont{author}\insertauthor\par
  		\vspace{12pt}
 		\usebeamerfont{institute}\insertinstitute\par
 		\vspace{12pt}
  		\usebeamerfont{date}\color{isglightblue}{\insertdate}\par
	  	\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
		\vspace*{28pt}
	  	\includegraphics[width=1\textwidth]{ISG/graphics/general/titlepage-logo.png}
    \end{center}
}


\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Applying the parameters defined above %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% ISG logo
\ifdisplaylogo
	\logo{\includegraphics[width=0.32\paperwidth]{ISG/graphics/singapore/isg-logo-70.png}\hspace*{0.1cm}}
\fi


% Footer
\ifdisplayfooter
	\usefoottemplate{\vbox{%
	\tinycolouredline{footerlightblue}
	  {\color{isgdarkblue}\insertshorttitle \hskip 5pt -- \insertshortauthor \hfill \insertframenumber / 	\inserttotalframenumber}
	}}
\fi


% TOC Section
\ifdisplaytocsection
	\AtBeginSection[]
	{
		\begin{frame}
			\frametitle{\insertsection}
			\tableofcontents[sectionstyle=show/shaded,subsectionstyle=show/show/hide]
		\end{frame}
	}
\fi

% TOC SubSection
\ifdisplaytocsubsection
	\AtBeginSubsection[]
	{
		\begin{frame}
			\frametitle{\insertsubsection}
			\tableofcontents[sectionstyle=show/shaded,subsectionstyle=show/shaded/hide]
		\end{frame}
	}
\fi


